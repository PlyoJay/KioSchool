<UserControl x:Class="KioSchool.Controls.Cafe.BasketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KioSchool.Controls.Cafe"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:KioSchool.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="960" d:DesignWidth="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Background="#D1D1D1">
            <TextBlock Text="주문 내역" FontWeight="Bold" FontSize="26"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <Border Background="#EDEDED" Grid.Row="1">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Items}" HorizontalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel x:Name="spBasket" Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#1F1F1F" BorderThickness="1" 
                                        Width="300" Height="120" Margin="10"
                                        Background="White"
                                        HorizontalAlignment="Center">
                                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <Image Source="{Binding Drink.DrinkImage}" Margin="5"/>
                                        </Grid>
                                        
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="35"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Margin="5 0">
                                                <Label Content="{Binding Drink.Name}" FontSize="16" 
                                                       FontWeight="Bold" />
                                                <Label Content="{Binding Size}" FontSize="14"/>
                                                <Label Content="{Binding Temperature}" FontSize="14"/>
                                            </StackPanel>
                                            <Button Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="20" Height="20" Padding="0" Margin="5"
                                                    VerticalAlignment="Top" HorizontalAlignment="Right">
                                                <materialDesign:PackIcon Kind="CloseCircle"/>
                                            </Button>
                                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" Margin="10 0">
                                                <Button Command="{Binding DataContext.MinusCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="25" Height="25" Padding="0"
                                                        VerticalAlignment="Center" Margin="0 0 15 0">
                                                    <materialDesign:PackIcon Kind="MinusCircle"/>
                                                </Button>

                                                <Label Content="{Binding Count}" VerticalAlignment="Center" FontSize="14"/>

                                                <Button Command="{Binding DataContext.PlusCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Width="25" Height="25" Padding="0"
                                                        VerticalAlignment="Center" Margin="15 0 0 0">
                                                    <materialDesign:PackIcon Kind="PlusCircle"/>
                                                </Button>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20 0">
                                                <TextBlock FontSize="16"
                                                           Text="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="총 수량 :" Foreground="Black" FontSize="22" Margin="5 0"/>
                <Label Content="총 금액 :" Grid.Row="1" Foreground="Black" FontSize="22" Margin="5 0"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                    <TextBlock Foreground="Red" FontSize="22">
                        <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                        <Run Text=" 개" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                    <TextBlock Foreground="Red" FontSize="22"
                               Text="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}"/>

                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding RemoveAllCommand}"
                    Background="#7F7F7F" BorderBrush="Transparent"
                    Width="80" Height="80" Padding="0"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <materialDesign:PackIcon Kind="TrashCan" Width="40" Height="40"/>
            </Button>
            <Button Grid.Column="1" Content="주문하기" FontSize="24" FontWeight="Bold"
                    Command="{Binding OrderCommand}"
                    Background="#BE1744" BorderBrush="Transparent"
                    Height="80" Padding="0"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        </Grid>
    </Grid>
</UserControl>
