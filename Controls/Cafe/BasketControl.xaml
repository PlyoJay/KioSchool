<UserControl x:Class="KioSchool.Controls.Cafe.BasketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KioSchool.Controls.Cafe"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:KioSchool.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="960" d:DesignWidth="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Background="#EDEDED">
            <Grid>
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Items}" HorizontalAlignment="Left">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel x:Name="spBasket" Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#1F1F1F" BorderThickness="1" 
                                        Width="115" Height="130" Margin="5 0"
                                        Background="White">
                                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="35"/>
                                        </Grid.RowDefinitions>
                                        <Button Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Width="20" Height="20" Padding="0"
                                                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="-7">
                                            <materialDesign:PackIcon Kind="CloseCircle"/>
                                        </Button>
                                        <StackPanel>
                                            <Label Content="{Binding Drink.Name}" FontSize="16" 
                                                   FontWeight="Bold" Margin="2 0"/>
                                            <Label Content="{Binding Size}" FontSize="14" 
                                                   Margin="2 0"/>
                                            <Label Content="{Binding Temperature}" FontSize="14" 
                                                   Margin="2 0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.MinusCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="25" Height="25" Padding="0"
                                                    VerticalAlignment="Center" Margin="0 0 15 0">
                                                <materialDesign:PackIcon Kind="MinusCircle"/>
                                            </Button>

                                            <Label Content="{Binding Count}" VerticalAlignment="Center"
                                                   FontSize="14"/>

                                            <Button Command="{Binding DataContext.PlusCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Width="25" Height="25" Padding="0"
                                                    VerticalAlignment="Center" Margin="15 0 0 0">
                                                <materialDesign:PackIcon Kind="PlusCircle"/>
                                            </Button>

                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="총 수량 :" Foreground="Black" FontSize="22" Margin="5 0"/>
                <Label Content="총 금액 :" Grid.Row="1" Foreground="Black" FontSize="22" Margin="5 0"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                    <TextBlock Foreground="Red" FontSize="22">
                        <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                        <Run Text=" 개" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                    <TextBlock Foreground="Red" FontSize="22">
                        <Run Text="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}"/>
                        <Run Text=" 원" />
                    </TextBlock>
                </StackPanel>
            </Grid>
            <!--<StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                <TextBlock Foreground="Yellow" FontSize="22">
                    <Run Text="총 수량 : "/>
                    <Run Text="{Binding TotalCount}"/>
                    <Run Text=" 개" />
                </TextBlock>
                --><!--<Label Content="총 결제 금액" FontSize="16" Foreground="Yellow" Margin="0 0 0 5"/>
                <Label Content="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}}" FontSize="22" Foreground="Yellow"/>--><!--
            </StackPanel>-->
        </Border>
        <Border Grid.Row="2" Background="#13AAF5">
            
        </Border>
    </Grid>
</UserControl>
