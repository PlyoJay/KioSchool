<UserControl x:Class="KioSchool.Controls.Cafe.BasketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KioSchool.Controls.Cafe"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:KioSchool.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="600"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Border Background="#EDEDED">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnBasketLeft" Height="70" Width="50" Background="Transparent" BorderThickness="0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Height="70" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"/>
                </Button>

                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Items}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel x:Name="spBasket" Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#1F1F1F" BorderThickness="1" 
                                        Width="115" Height="130" Margin="5 0">
                                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="35"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel>
                                            <Label Content="{Binding Drink.Name}" FontSize="16" 
                                                   FontWeight="Bold" Margin="2 0"/>
                                            <Label Content="{Binding Size}" FontSize="14" 
                                                   Margin="2 0"/>
                                            <Label Content="{Binding Temperature}" FontSize="14" 
                                                   Margin="2 0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                                            <Button Command="{Binding MinusCommand}"
                                                    Width="25" Height="25" Padding="0"
                                                    VerticalAlignment="Center" Margin="0 0 15 0">
                                                <materialDesign:PackIcon Kind="MinusCircle"/>
                                            </Button>


                                            <Label Content="{Binding Count}" VerticalAlignment="Center"
                                                   FontSize="14"/>

                                            <Button Command="{Binding PlusCommand}"
                                                    Width="25" Height="25" Padding="0"
                                                    VerticalAlignment="Center" Margin="15 0 0 0">
                                                <materialDesign:PackIcon Kind="PlusCircle"/>
                                            </Button>

                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Button x:Name="btnBasketRight" Grid.Column="2" Height="70" Width="50" Background="Transparent" BorderThickness="0">
                    <materialDesign:PackIcon Kind="ChevronRight" Height="70" Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"/>
                </Button>
            </Grid>
        </Border>
        <Border Grid.Column="1" Background="Black">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5 0">
                <Label Content="총 결제 금액" FontSize="16" Foreground="Yellow" Margin="0 0 0 5"/>
                <Label Content="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}}" FontSize="22" Foreground="Yellow"/>
            </StackPanel>
        </Border>
        <Border Grid.Column="2" Background="#13AAF5">
            
        </Border>
    </Grid>
</UserControl>
