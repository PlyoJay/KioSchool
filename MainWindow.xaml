<Window x:Class="KioSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioSchool"
        xmlns:view="clr-namespace:KioSchool.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="960" WindowStartupLocation="CenterScreen">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnCafeKiosk" Content="카페 주문하기" 
                        Style="{StaticResource HomeMenuButtonStyle}"
                        Tag="/Resources/Images/CafeIcon.png"
                        Click="btnCafeKiosk_Click"/>
                <Button x:Name="btnHospitalKiosk" Content="병원 접수하기" 
                        Style="{StaticResource HomeMenuButtonStyle}"
                        Tag="/Resources/Images/HospitalIcon.png"/>
            </StackPanel>

            <StackPanel Grid.Row="2" VerticalAlignment="Center">
                <Label Content="키오스크 훈련 시뮬레이터" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                <Label Content="KioSchool" FontSize="60" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>

            <view:Container x:Name="container" Grid.RowSpan="3" Visibility="Collapsed"/>
        </Grid>
    </Border>
</Window>
