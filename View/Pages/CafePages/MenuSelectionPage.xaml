<Page x:Class="KioSchool.View.Pages.CafePages.MenuSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KioSchool.View.Pages.CafePages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:KioSchool.Controls.Cafe"
      xmlns:vm="clr-namespace:KioSchool.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="895" d:DesignWidth="960"
      Title="CafeOrder">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <controls:CategoryControl DataContext="{Binding CategoryVM}"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            <controls:DrinkSelectionControl DataContext="{Binding DrinkSelectionVM}"/>
            <controls:BasketControl Grid.Column="1" DataContext="{Binding BasketVM}"/>
            <!--<controls:MenuSelectorControl DataContext="{Binding MenuSelectorVM}"/>-->
        </Grid>
    </Grid>
</Page>
