<Window x:Class="KioSchool.View.Popups.Cafe.OptionsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioSchool.View.Popups.Cafe"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewmodel="clr-namespace:KioSchool.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:OptionsDialogViewModel}"
        mc:Ignorable="d"
        Title="OptionsPopup" Height="780" Width="660" WindowStartupLocation="CenterScreen">
    <Grid Cursor="">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding Drink.Name}" FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Left" Margin="20 20"/>

        <Image Source="{Binding Drink.DrinkImage}" Width="150" Height="180"
               HorizontalAlignment="Right" Margin="20 0"/>

        <Border Grid.Row="0" BorderThickness="0 0 0 1" BorderBrush="LightGray"/>

        <StackPanel Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Drink.Temperatures}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Path=., Converter={StaticResource EnumToKoreanConverter}}" GroupName="TempGroup" Tag="{Binding}"
                                     Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                     Height="50" Width="130" Margin="15"
                                     Command="{Binding DataContext.SelectTemperatureCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                     CommandParameter="{Binding}">
                            <RadioButton.IsChecked>
                                <MultiBinding Converter="{StaticResource EnumEqualityMultiConverter}">
                                    <Binding Path="." />
                                    <Binding Path="DataContext.SelectedTemperature" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                </MultiBinding>
                            </RadioButton.IsChecked>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding Drink.Sizes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Path=., Converter={StaticResource EnumToKoreanConverter}}" GroupName="SizeGroup" Tag="{Binding}"
                                     Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                     Height="50" Width="130" Margin="15"
                                     Command="{Binding DataContext.SelectSizeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                     CommandParameter="{Binding}">
                            <RadioButton.IsChecked>
                                <MultiBinding Converter="{StaticResource EnumEqualityMultiConverter}">
                                    <Binding Path="." />
                                    <Binding Path="DataContext.SelectedSize" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                </MultiBinding>
                            </RadioButton.IsChecked>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Grid Grid.Row="2">
            <Label Content="수량" FontSize="20" FontWeight="Bold"
                   Margin="20 0" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="100 0 0 0">
                <Button Command="{Binding MinusCommand}"
                        Width="27" Height="27" Padding="0"
                        VerticalAlignment="Center" Margin="0 0 15 0">
                    <materialDesign:PackIcon Kind="MinusCircle"/>
                </Button>
                
                
                <Label Content="{Binding Count}" VerticalAlignment="Center"
                       FontSize="18"/>

                <Button Command="{Binding PlusCommand}"
                        Width="27" Height="27" Padding="0"
                        VerticalAlignment="Center" Margin="15 0 0 0">
                    <materialDesign:PackIcon Kind="PlusCircle"/>
                </Button>
                
            </StackPanel>
            

            <Label Content="{Binding TotalPrice, Converter={StaticResource PriceToStringConverter}}"
                   HorizontalAlignment="Right" Margin="20 0"
                   FontSize="20" FontWeight="Bold"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
            <Button Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="취소"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0 0 30 0" Width="150" Height="50"/>
            <Button Command="{Binding ConfirmCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="선택완료"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    Width="150" Height="50" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
