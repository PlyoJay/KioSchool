<Window x:Class="KioSchool.View.Popups.Cafe.PaymentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioSchool.View.Popups.Cafe"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PaymentPopup" Height="600" Width="660" WindowStartupLocation="CenterScreen">
    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Grid Background="#DC1333">
                <TextBlock Text="결제방법을 선택해주세요."
                           FontSize="28" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="총 결제 금액"
                               FontSize="20" FontWeight="Bold" Margin="0 5"/>
                    <TextBlock Text="{Binding TotalPrice}"
                               FontSize="20" FontWeight="Bold" Foreground="#E0B0BB"/>
                </StackPanel>                
            </Grid>

            <UniformGrid Grid.Row="2">
                <Border Width="100" Height="120" BorderThickness="1" BorderBrush="Gray">
                    <materialDesign:PackIcon Kind="CreditCard" Width="100" Height="60"/>
                </Border>
            </UniformGrid>
            
            <Grid Grid.Row="3">
                <Button Content="취소" FontSize="24" FontWeight="Bold"
                        Command="{Binding CancelCommand}"
                        Background="#9B9CA0" BorderBrush="Transparent"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Height="60" Width="180"/>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
